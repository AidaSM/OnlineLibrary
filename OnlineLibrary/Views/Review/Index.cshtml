@model IEnumerable<OnlineLibrary.Models.ReviewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Idreview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idmember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idbook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idreview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idmember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idbook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Idreview }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Idreview }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Idreview })
            </td>
        </tr>
}
    </tbody>
</table>
