@model List<TransactionModel>
@using System.Security.Claims

<style>
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .status {
        font-weight: bold;
        color: #007bff;
    }
</style>

<h1>My Transactions</h1>

<table>
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Date</th>
            <th>Return Date</th>
            <th>Status</th>
            <!-- Add other headers as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Book.Title</td>
                <td>@transaction.Book.IdauthorNavigation.Name</td>
                <td>@transaction.Book.IdgenreNavigation.Name</td>
                <td>@transaction.Date</td>
                <td>@transaction.Return</td>
                <td class="status">@transaction.Status</td>
                <!-- Add other cells as needed -->
            </tr>
        }
    </tbody>
</table>
