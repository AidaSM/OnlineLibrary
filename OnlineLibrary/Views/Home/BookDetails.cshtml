@model BookModel

@{
    ViewBag.Title = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Details</h2>

<div>
    <div>
        <img src="@Url.Content(Model.ImagePath)" alt="@Model.Title" style="max-width: 300px; max-height: 400px;" />
    </div>

    <div>
        <h3>@Model.Title</h3>
        <!-- Display the author's name based on Author property in BookModel -->
        <p><strong>Author:</strong> @(Model.Author?.Name ?? "Unknown Author")</p>
        <p><strong>Total Copies:</strong> @Model.TotalCopies</p>
        <!-- Add other book details as needed -->
    </div>
</div>
