@model List<OnlineLibrary.Models.BookModel>

@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <img src="@Url.Content(book.ImagePath)" class="card-img-top" alt="@book.Title">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">Author: @book.IdauthorNavigation.Name</p>
                        <p class="card-text">Genre: @book.IdgenreNavigation.Name</p>
                        <p class="card-text">Publication Year: @book.PublicationYear</p>
                        <p class="card-text">Available Copies: @book.AvailableCopies</p>
                        <!-- Add other book details as needed -->
                        <a href="@Url.Action("Details", "Home", new { id = book.Idbook })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No results found.</p>
}
